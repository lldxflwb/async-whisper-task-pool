# Whisper转录API服务配置文件
# 复制此文件为 .env 并根据需要修改配置

# 任务池配置
export MAX_TASK_POOL_SIZE=5

# 文件存储配置
export UPLOAD_DIR=uploads
export RESULT_DIR=results
export TEMP_DIR=temp

# Whisper配置
export WHISPER_MODEL=large-v3-turbo

# 服务器配置
export HOST=0.0.0.0
export PORT=6006

# 安全配置（当前未使用，预留用于将来扩展）
export SECRET_KEY=whisper-api-secret-key-change-in-production

# 任务清理配置（小时）
export RESULT_RETENTION_HOURS=24

# 日志配置
export LOG_LEVEL=INFO 